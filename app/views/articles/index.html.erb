<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">text</th>
      <th scope="col">show</th>
      <th scope="col">edit</th>
      <th scope="col">delete</th>

    </tr>
  </thead>
  <tbody>
    <tr>

    </tr>
    <% @data.each do |item| %>
        <tr>
        <th scope="row"><%=item.id%></th>
      <td><%=item.title%></td>
      <td><%=item.text%></td>
      <td>
      <a href="/article/get/<%=item.id%>" class="btn btn-danger">show</a>
      <%= link_to 'Back', article_path(item.id)  %>

      </td>
      <td>
      <a href="/article/edit/<%=item.id%>" class="btn btn-danger">edit</a>
      <%= link_to 'Back', edit_article_path(item.id)  %>

     </td>
      <td>
      <a href="/article/delete/<%=item.id%>" class="btn btn-danger">delete</a>
      <%= link_to 'Back', article_path(item.id) ,method: :delete  %>

      </td>


      </tr>
<% end %>
    
  </tbody>
</table>


